version: "3"

services:
    silicon:
        container_name: silicon
        image: silicon
        restart: unless-stopped
        user: root
        environment:
            - PUID=1000
            - PGID=1000
        security_opt:
            - no-new-privileges:true
        expose:
            - 8080
        environment:
            - TZ=America/New_York
        volumes:
            - "./data:/home/silicon/instance"

networks:
    default:
        external: true
        name: "{{ docker_network }}"
