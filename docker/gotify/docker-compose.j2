version: "3"

services:
    gotify:
        container_name: gotify
        image: gotify/server
        restart: unless-stopped
        expose:
            - 80
        environment:
            - TZ=America/New_York
        volumes:
            - "./data:/app/data"
        deploy:
            resources:
                limits:
                    cpus: '2.0'

networks:
    default:
        external: true
        name: "{{ docker_network }}"
