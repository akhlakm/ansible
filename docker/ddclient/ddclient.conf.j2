daemon=1800				            # check every 1800 seconds
syslog=no				            # log update msgs to syslog
pid=/var/run/ddclient/ddclient.pid	# record PID in file.
ssl=no

# Run script after updating.  The new IP is added as argument.
# postscript=script		

## To obtain an IP address from Web status page (using the proxy if defined)
## by default, checkip.dyndns.org is used if you use the dyndns protocol.
## Using use=web is enough to get it working.
## WARNING: set deamon at least to 600 seconds if you use checkip or you could
## get banned from their service.
use=web, web=http://checkip.dyndns.org/, web-skip='Current IP Address:'
# use=cmd, cmd=/etc/ddclient/get-ip-from-fritzbox

protocol=cloudflare
zone={{ domain }}
login={{ cloudflare_login }}
password={{ cloudflare_global_api }}
{{ domain_masks }}
