version: "3"

services:
    jellyfin:
        container_name: jellyfin
        image: jellyfin/jellyfin:latest
        restart: unless-stopped
        expose:
            - 8096
        environment:
            - TZ=America/New_York
        volumes:
            - ./config:/config
            - ./cache:/cache
            - ~/media:/media

networks:
    default:
        external: true
        name: "{{ docker_network }}"
